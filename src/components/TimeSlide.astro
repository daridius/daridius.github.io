<style>
    .grid-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        width: 100%;
        text-align: center;
    }

    .card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 1.5rem;
        border-radius: 20px;
        backdrop-filter: blur(10px);
        transform-style: preserve-3d;
    }

    h3 {
        margin: 0;
        font-size: 1rem;
        text-transform: uppercase;
