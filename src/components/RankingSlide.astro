---
import Slide from "./Slide.astro";
import { wrappedData } from "../data";

// Rank data is already sorted in data.ts usually, but ensure sort
const sortedSenders = [...wrappedData.top_senders].sort(
    (a, b) => b.messages - a.messages,
);
---

<Slide class="ranking-slide">
    <h2 class="header-title">Los que mÃ¡s escribieron...</h2>

    <div class="ranking-list">
        {
            sortedSenders.map((sender, index) => (
                <div class={`rank-card rank-${index + 1}`}>
                    <div class="rank-number">#{index + 1}</div>
                    <div class="avatar-placeholder">{sender.name[0]}</div>
                    <div class="info">
                        <div class="name">{sender.name}</div>
                        <div class="count">
                            {sender.messages.toLocaleString()} mensajes
                        </div>
                    </div>
                    {index === 0 && <div class="crown">ðŸ‘‘</div>}
                </div>
            ))
        }
    </div>
</Slide>

<script>
    import { gsap } from "gsap";
    const slide = document.querySelector(".ranking-slide");

    slide?.addEventListener("slide-enter", () => {
        gsap.fromTo(
            ".header-title",
            { opacity: 0, y: -20 },
            { opacity: 1, y: 0, duration: 0.8 },
        );

        gsap.fromTo(
            ".rank-card",
            { x: 50, opacity: 0 },
            {
                x: 0,
                opacity: 1,
                stagger: 0.2,
                duration: 0.6,
                delay: 0.3,
                ease: "power2.out",
            },
        );
    });
</script>

<style>
    .header-title {
        text-align: center;
        margin-bottom: 2rem;
        opacity: 0;
    }

    .ranking-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 100%;
        max-width: 450px;
    }

    .rank-card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        opacity: 0;
        position: relative;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: transform 0.2s;
    }

    /* Gold, Silver, Bronze borders/highlights */
    .rank-1 {
        border-color: #ffd700;
        background: linear-gradient(
            90deg,
            rgba(255, 215, 0, 0.1),
            rgba(255, 255, 255, 0.05)
        );
    }
    .rank-2 {
        border-color: #c0c0c0;
    }
    .rank-3 {
        border-color: #cd7f32;
    }

    .rank-number {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--text-secondary);
        width: 40px;
    }

    .rank-1 .rank-number {
        color: #ffd700;
    }
    .rank-2 .rank-number {
        color: #c0c0c0;
    }
    .rank-3 .rank-number {
        color: #cd7f32;
    }

    .avatar-placeholder {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: var(--whatsapp-teal);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
    }

    .info {
        flex: 1;
    }

    .name {
        font-size: 1.2rem;
        font-weight: 600;
        color: white;
    }

    .count {
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    .crown {
        font-size: 2rem;
        animation: rotate 3s infinite linear;
    }
</style>
