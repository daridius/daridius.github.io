---
import Slide from "./Slide.astro";
import { wrappedData } from "../data";
---

<Slide class="social-slide">
    <div class="top-section">
        <h3>Los reyes de tu chat</h3>
        <div class="crown">ðŸ‘‘</div>
    </div>

    <div class="user-card">
        <div class="avatar-placeholder">{wrappedData.topUser[0]}</div>
        <div class="user-info">
            <h2>{wrappedData.topUser}</h2>
            <p>Se lleva el premio mayor con el</p>
        </div>
        <div class="stat-value percentage">{wrappedData.userShare}%</div>
        <p>de tus mensajes</p>
    </div>

    <div class="emoji-section">
        <h3>Tu emoji espiritual</h3>
        <div class="stat-value emoji-big">{wrappedData.topEmoji}</div>
    </div>
</Slide>

<style>
    .top-section {
        text-align: center;
        margin-bottom: 2rem;
    }

    .crown {
        font-size: 3rem;
        animation: bounce 2s infinite;
    }

    .user-card {
        background: linear-gradient(
            135deg,
            rgba(37, 211, 102, 0.1),
            rgba(0, 0, 0, 0.2)
        );
        border: 1px solid var(--whatsapp-green);
        padding: 2rem;
        border-radius: 24px;
        text-align: center;
        width: 100%;
        margin-bottom: 2rem;
    }

    .avatar-placeholder {
        width: 80px;
        height: 80px;
        background: var(--whatsapp-green);
        color: #000;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: bold;
        margin: 0 auto 1rem auto;
        box-shadow: 0 0 20px rgba(37, 211, 102, 0.4);
    }

    .user-info h2 {
        font-size: 2.5rem;
        margin: 0;
        color: white;
    }

    .stat-value.percentage {
        font-size: 4rem;
        font-weight: 800;
        color: var(--accent-neon);
        line-height: 1;
        margin: 0.5rem 0;
    }

    p {
        margin: 0;
        color: var(--text-secondary);
    }

    .emoji-section {
        text-align: center;
    }

    .stat-value.emoji-big {
        font-size: 6rem;
        margin-top: 0.5rem;
        filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.5));
    }

    @keyframes bounce {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
</style>
